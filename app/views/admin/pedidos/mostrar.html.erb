    </div>
</div>


<div class="row mt-2">
    <div class="col-4">
        <div class="alert alert-primary" role="alert">
            <%= @pedido.estados_pedido.estado %>
        </div>
    </div>
</div>    

<div class="row mt-1">
    <div class="col-8">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">
                    Datos env√≠o
                </h4>
                <!-- DATOS DE ENV√çO -->
                <div class="row">
                    <div class="col-12">
                        Nombre: <%= @pedido.datos_envio.nombre %>            
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        Correo: <%= @pedido.datos_envio.correo %>            
