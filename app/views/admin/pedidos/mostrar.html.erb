    <div class="card-body">
        <h4 class="card-title">
            Productos
        </h4>
        <div class="row  text-center">
            <div class="col-12">
                <div class="row">
                    <div class="col-2">
                        <strong>
                            Im√°gen
                        </strong>
                    </div>
                    <div class="col">
                        <strong>
                            Nombre
                        </strong>
                    </div>
                    <div class="col">
                        <strong>
                            Precio
                        </strong>
                    </div>
                    <div class="col">
