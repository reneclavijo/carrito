        </div>
    </div>
</div>    

<div class="row mt-1">
    <div class="col-6">
        <div class="card">
            <div class="card-body">
                <!-- DATOS DE ENV√çO -->
                <div class="row">
                    <div class="col-12">
                        Nombre: <%= @pedido.datos_envio.nombre %>            
                    </div>
                </div>
