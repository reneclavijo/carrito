                        </strong>
                    </div>
                </div>
                <% @pedido.detalles_pedidos.each do |detalle| %>
                    <div class="row">
                        <div class="col-2">
                            <%= image_tag detalle.producto.imagenes.first, class: 'w-100' %>                
                        </div>
                        <div class="col">
                            <%= detalle.producto.nombre %>                
                        </div>
                        <div class="col">
                            <%= detalle.producto.precio %>                
