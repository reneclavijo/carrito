<%= form_with(model: @datos_envio, url: crear_pedido_cliente_path) do |formulario| %>
    <div class="mb-3">
        <%= formulario.label :nombre, class: 'form-label' %>
        <%= formulario.text_field :nombre, class: 'form-control' %>
        
    </div>

    <div class="mb-3">
        <%= formulario.label :correo, class: 'form-label' %>
        <%= formulario.text_field :correo, class: 'form-control' %>
    </div>

    <div class="mb-3">
        <%= formulario.label :direccion, class: 'form-label' %>
        <%= formulario.text_field :direccion, class: 'form-control' %>
    </div>

    <div class="mb-3">
        <%= formulario.label :telefono, class: 'form-label' %>
        <%= formulario.text_field :telefono, class: 'form-control' %>
    </div>

    <div class="mb-3">
        <%= formulario.label :destino_id, class: 'form-label' %>
        <%= formulario.select(:destino_id,
            options_from_collection_for_select(@destinos, :id, :nombre),
            {include_blank: 'Elige un destino'},
            {class: 'form-select'}) %>
    </div>


    <%= formulario.submit "Realizar pedido", class: 'btn btn-primary' %>
<% end %>